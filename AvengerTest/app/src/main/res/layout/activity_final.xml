<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"     xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FinalActivity">

    <TextView
        android:id="@+id/textViewCongratulations"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:gravity="center"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <ImageView
        android:id="@+id/imageViewAvenger"
        android:layout_width="match_parent"
        android:layout_height="248dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewCongratulations"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewAvenger"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewAvenger"
        tools:layout_editor_absoluteX="-32dp" />

    <TextView
        android:id="@+id/textViewDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewAvenger"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/buttonShare"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#E91E63"
        android:text="Compartir"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewDescripcion"
        tools:layout_editor_absoluteX="-16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>